local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local coreGui = game:GetService("CoreGui")

-- ç”»é¢ä¸Šã«é€šçŸ¥ã‚’å‡ºã™ãŸã‚ã®è¨­å®š
local function notify(text)
    local hint = Instance.new("Hint", coreGui)
    hint.Text = "ğŸš¨ æ¤œçŸ¥: " .. text
    task.delay(3, function() hint:Destroy() end)
    print("DEBUG: " .. text)
end

print("--- ç›£è¦–ã‚’é–‹å§‹ã—ã¾ã—ãŸã€‚ã‚­ãƒ£ãƒ©ã‚’æ‹…ã„ã§ã¿ã¦ãã ã•ã„ ---")

-- ã‚­ãƒ£ãƒ©ã‚¯ã‚¿ãƒ¼ã®ä¸­ã«ä½•ã‹ãŒè¿½åŠ ã•ã‚ŒãŸã‚‰å®Ÿè¡Œã•ã‚Œã‚‹
char.DescendantAdded:Connect(function(descendant)
    -- è¿½åŠ ã•ã‚ŒãŸã‚‚ã®ã®åå‰ã¨ã‚¯ãƒ©ã‚¹ã‚’è¡¨ç¤º
    notify("è¿½åŠ ã•ã‚Œã¾ã—ãŸ -> åå‰: " .. descendant.Name .. " | ç¨®é¡: " .. descendant.ClassName)
    
    -- ç‰¹ã«æ€ªã—ã„ã‚‚ã®ï¼ˆæ¥ç¶šç³»ï¼‰ã¯è©³ã—ãå‡ºåŠ›
    if descendant:IsA("Weld") or descendant:IsA("ManualWeld") or descendant:IsA("BallSocketConstraint") then
        warn("ğŸ’¡ ã“ã‚ŒãŒã€æ‹…ãåˆ¤å®šã€ã®å¯èƒ½æ€§ãŒé«˜ã„ã§ã™: " .. descendant.Name)
    end
end)

-- é€†ã«æ¶ˆãˆãŸæ™‚ã‚‚è¡¨ç¤ºï¼ˆãƒ†ãƒ¬ãƒãƒ¼ãƒˆå®Œäº†ã®åˆ¤æ–­ã«ä½¿ãˆã‚‹ï¼‰
